@model List<CourseViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var count = 0;
}

<h4>Kurslar</h4>
<hr />
@if (Model.Any())
{
    @foreach (var item in Model)
    {
        count++;
        if (count == 1 || (count % 3 == 1))
        {
            @Html.Raw("<div class='row row-cols-1 row-cols-md-3 g-4 mb-2'>")
        }
        <div class="col">
            <div class="card">
                <img src="@item.StcokPictureUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <div class="badge bg-primary mb-2">Kategori : @item.Category.Name</div>
                    <p class="card-text">@item.ShortDescription</p>
                    <h5 class="text-primary">@item.Price TL</h5>
                    <div>
                        <a class="btn btn-success" asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id">Kurs Detay</a>
                    </div>
                </div>
            </div>
        </div>

        if (count % 3 == 0)
        {
            @Html.Raw("</div>")
        }
    }
}