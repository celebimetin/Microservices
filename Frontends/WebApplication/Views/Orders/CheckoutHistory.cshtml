@model List<OrderViewModel>

@{
    ViewData["Title"] = "CheckoutHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Ödeme Geçmişim</h5>
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>Sipariş no</th>
                            <th>Satın alma tarihi</th>
                            <th>Detaylar</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.CreatedDate.ToShortDateString()</td>
                                <td>
                                    <table class="table table-striped">
                                        <tr>
                                            <th>Kurs ismi</th>
                                            <th>Kurs fiyat</th>
                                        </tr>
                                        @foreach (var orderItems in item.OrderItems)
                                        {
                                            <tr>
                                                <td>@orderItems.ProductName</td>
                                                <td>@orderItems.Price</td>
                                            </tr>
                                        }
                                    </table>
                                </td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <div class="alert alert-info">Satın aldığınız kurs bulunmamaktadır</div>
                }
            </div>
        </div>
    </div>
</div>