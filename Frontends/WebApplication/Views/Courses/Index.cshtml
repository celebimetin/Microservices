@model List<CourseViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurslar</h5>
                <a class="btn btn-primary mb-3" asp-controller="Courses" asp-action="Create">Kurs Ekle</a>
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Kategori</th>
                                <th>Kurs İsmi</th>
                                <th>Fiyat</th>
                                <th>Süre</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img style="width:75px;" src="@item.StcokPictureUrl" class="img-thumbnail" /></td>
                                    <td>@item.Category.Name</td>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Feature.Duration</td>
                                    <td>
                                        <a class="btn btn-success btn-sm mb-3" asp-controller="Courses" asp-action="Update"
                                           asp-route-id="@item.Id">Güncelle</a>
                                        <a class="btn btn-danger btn-sm mb-3" asp-controller="Courses" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">Kayıtlı kurs bulunamadı.</div>
                }
            </div>
        </div>
    </div>
</div>